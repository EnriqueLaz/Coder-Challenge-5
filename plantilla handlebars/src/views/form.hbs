<h2>Ingrese Producto</h2>
<section>
    <form action="/api/productos/add" method="POST">
        <div>
            <label for="name">Nombre:</label>
            <input class="form-control" type="text" name="nombre" required />
        </div>
        <div>
            <label for="price">Precio:</label>
            <input class="form-control" type="number" name="precio" required />
        </div>
        <div>
            <label for="picture">Foto
                URL:</label>
            <input class="form-control" type="url" name="img" required />
        </div>
        <div>
            <input class="btn" type="submit" value="Enviar" />


        </div>
    </form>
    <div>
        <a href="./">
            <button class="btn">Ver Productos</button>
        </a>
    </div>
</section>